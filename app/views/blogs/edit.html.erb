<section>
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<h1><b>Editing Book</b></h1>
					<div class="form-box">
						<%= form_for(@blog) do |f| %>
							<p>
								<b>Title</b>
								<%= f.text_field :title, :size=>"77" %>
							</p>
							<p>
								<b>Opinion</b>(200 character limit)
								<%= f.text_area :body, :size=>"76", :maxlength => "200" %>
							</p>

							<button type="submit" class="btn btn-primary btn-block">
								<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Update Book
							</button>
						<% end %>
					</div>
				<%= link_to "Show", blog_path(@blog), data:{ confirm: "You did not save your changes. Are you sure you want to exit?", cancel: "Cancel", commit: "OK"}, title: "Are you sure?" %>
			 	|
				<%= link_to "Back to Books", blogs_path, data:{ confirm: "You did not save your changes. Are you sure you want to exit?", cancel: "Cancel", commit: "OK"} , title: "Logout" %>
			</div>
			<div class="col-lg-3"></div>
		</div>
	</div>
</section>
<div class="form-position">
	<%= form_for(@blog) do |f| %>
		<p><b>Title</b></p>
		<%= f.text_field :title, class: "book_title" %>

		<p><b>Body</b></p>
		<%= f.text_area :body, class: "book_body" %>

		<%= f.submit 'Update Book' %>
	<% end %>
</div>
<p>
	<span class="edit" >
		<%= link_to "Show", blog_path(@blog.id), "data-confirm" => "このまま移動すると編集した内容は保存されません。よろしいですか?" %>
	</span>
	<span> | </span>
	<span class="back">
		<%= link_to "Back to Books", blogs_path, "data-confirm" => "このまま移動すると編集した内容は保存されません。よろしいですか?" %>
	</span>
</p>
